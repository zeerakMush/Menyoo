<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="27dp"
    android:background="@drawable/bg_image_2"
    android:layout_gravity="center"
    android:gravity="center"
    tools:context="com.dd.menyoo.RegistrationActivity">

    <EditText
        android:id="@+id/et_first_name"
        android:layout_width="match_parent"
        android:inputType="textCapWords"
        android:layout_marginTop="100dp"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:hint="First Name*"
        android:layout_centerHorizontal="true"
        />

    <EditText
        android:id="@+id/et_last_name"
        android:layout_width="match_parent"
        android:inputType="textCapWords"
        android:layout_height="wrap_content"
        android:layout_below="@id/et_first_name"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:hint="Last Name*"
        android:layout_centerHorizontal="true"
        />

    <EditText
        android:id="@+id/et_emailAddress"
        android:layout_width="match_parent"
        android:inputType="textEmailAddress"
        android:layout_height="wrap_content"
        android:hint="Email Address*"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/et_last_name"
        />
    <EditText
        android:id="@+id/et_phoneNumber"
        android:layout_width="match_parent"
        android:inputType="phone"
        android:layout_height="wrap_content"
        android:hint="@string/pass_Reg"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/et_emailAddress"
        />

    <EditText
        android:id="@+id/et_password_1"
        android:layout_width="match_parent"
        android:inputType="textPassword"
        android:layout_height="wrap_content"
        android:hint="Password*"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/et_phoneNumber"
        />

    <EditText
        android:id="@+id/et_password_2"
        android:layout_width="match_parent"
        android:inputType="textPassword"
        android:layout_height="wrap_content"
        android:hint="Repeat Password*"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/et_password_1"
        />

    <Button
        android:id="@+id/btn_signIn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:onClick="register"
        android:textSize="17sp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_marginBottom="20dp"
        android:layout_centerHorizontal="true"
        android:text="Register"
        />

</RelativeLayout>
