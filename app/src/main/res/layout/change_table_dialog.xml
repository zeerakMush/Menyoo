<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="300dp"
    android:layout_margin="20dp"
    android:padding="2dp"
    android:background="@color/sub_text_color"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/txt_msg"
        android:layout_width="match_parent"
        android:gravity="center_horizontal"
        android:layout_height="wrap_content"
        android:text="Change Table"
        android:layout_centerHorizontal="true"
        android:textColor="@color/white"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:textSize="18sp"/>
    <View
        android:id="@+id/SeparatorView"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/white"
        android:layout_below="@+id/txt_msg"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/SeparatorView"
        android:background="@color/black"
        >
        <EditText
            android:id="@+id/et_tableCode"
            android:textSize="14sp"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:visibility="visible"
            android:padding="5dp"
            android:textColor="@color/bottom_menu_color"
            android:background="@drawable/custom_edit_text"
            android:drawableLeft="@drawable/table_icon"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="90dp"
            android:hint="New Table Code"
            android:imeOptions="actionDone"
            android:inputType="text" />
        <Button
            android:id="@+id/btn_submit"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/et_tableCode"
            android:layout_centerHorizontal="true"
            android:text="Submit"
            />
    </RelativeLayout>


</RelativeLayout>